{
  "name": "News",
  "description": "An example of a client-side app built with Polymer and Apollo Client.",
  "version": "0.0.1",
  "author": "Arun Kumar TK <aruntknambiar@gmail.com>",
  "private": true,
  "main": "main.electron.js",
  "scripts": {
    "start": "webpack-dev-server --inline --hot --port 3000",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "postinstall": "bower install",
    "wp:build": "webpack --config ./webpack.config.js",
    "clean:osx": "rm -rf ./build/osx",
    "pack:osx": "npm run clean:osx && npm run wp:build && electron-packager . \"News\" --out=build/osx --platform=darwin --arch=x64 --version=1.4.12 --icon=assets/osx/news.icns --ignore=build/ --ignore=assets --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",
    "build:osx": "npm run pack:osx && electron-builder \"build/osx/News-darwin-x64/News.app\" --platform=osx --out=\"build/osx\" --config=builder.json"
  },
  "dependencies": {
    "apollo-client": "^0.5.21",
    "electron": "^1.4.14",
    "graphql-tag": "^1.1.2",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.17.1",
    "polymer-apollo": "^1.1.20",
    "subscriptions-transport-ws": "^0.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "bower": "^1.8.0",
    "cross-env": "^1.0.6",
    "css-loader": "^0.23.1",
    "electron": "^1.4.1",
    "electron-builder": "^10.15.1",
    "electron-packager": "^8.4.0",
    "file-loader": "^0.8.4",
    "json-loader": "^0.5.4",
    "offline-plugin": "^4.5.3",
    "wc-loader": "^1.1.0",
    "webpack": "2.1.0-beta.22",
    "webpack-dev-server": "2.1.0-beta.0"
  }
}
